{% extends 'base.html.twig' %}

{% block title %}Details index{% endblock %}

{% block body %}
    <h1>Details index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>De_quantity</th>
                <th>De_price</th>
                <th>De_totalprice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for detail in details %}
            <tr>
                <td>{{ detail.id }}</td>
                <td>{{ detail.deQuantity }}</td>
                <td>{{ detail.dePrice }}</td>
                <td>{{ detail.deTotalprice }}</td>
                <td>
                    <a href="{{ path('app_details_show', {'id': detail.id}) }}">show</a>
                    <a href="{{ path('app_details_edit', {'id': detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_details_new') }}">Create new</a>
{% endblock %}
