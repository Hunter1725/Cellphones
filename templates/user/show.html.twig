{% extends 'baseadmin.html.twig' %}

{% block title %}Account details - Admin site{% endblock %}

{% block body %}
<h1>ACCOUNT INFORMATION</h1>
<hr></hr>
<h3>ACCOUNT DETAILS</h3>
<br></br>

<div class="container">
    <div class="row col-md-3">
        <h4>
            <strong>ID:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.id }}</h4>
    </div>
    
    <div class="row col-md-3">
        <h4>
            <strong>Username:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usUsername }}</h4>
    </div>
    
    <div class="row col-md-3">
        <h4>
            <strong>Password:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usPassword }}</h4>
    </div>
    
    <div class="row col-md-3">
        <h4>
            <strong>Full name:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usFullname }}</h4>
    </div>
    
    <div class="row col-md-3">
        <h4>
            <strong>E-mail:</strong>
        </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usMail }}</h4>
    </div>

    <div class="row col-md-3">
    <h4>
        <strong>Phone number:</strong>
    </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usPhone }}</h4>
    </div>

    <div class="row col-md-3">
    <h4>
        <strong>Address:</strong>
    </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usAddress }}</h4>
    </div>

    <div class="row col-md-3">
    <h4>
        <strong>Role:</strong>
    </h4>
    </div>
    <div class="row col-md-9">
        <h4>{{ user.usRole }}</h4>
    </div>
</div>
<br/>
    <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to list</a>

{% endblock %}
