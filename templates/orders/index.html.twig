{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Or_date</th>
                <th>Or_deliverydate</th>
                <th>Or_phone</th>
                <th>Or_address</th>
                <th>Or_totalprice</th>
                <th>Or_status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.orDate ? order.orDate|date('Y-m-d') : '' }}</td>
                <td>{{ order.orDeliverydate ? order.orDeliverydate|date('Y-m-d') : '' }}</td>
                <td>{{ order.orPhone }}</td>
                <td>{{ order.orAddress }}</td>
                <td>{{ order.orTotalprice }}</td>
                <td>{{ order.orStatus }}</td>
                <td>
                    <a href="{{ path('app_orders_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_orders_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_orders_new') }}">Create new</a>
{% endblock %}
