{% extends 'baseadmin.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ order.orDate ? order.orDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Delivery Date</th>
                <td>{{ order.orDeliverydate ? order.orDeliverydate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.orPhone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.orAddress }}</td>
            </tr>
            <tr>
                <th>Totalprice</th>
                <td>{{ order.orTotalprice }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.orStatus }}</td>
            </tr>
        </tbody>
    </table>



	<a href="{{ path('app_items_index') }}" class="btn btn-primary">
		Back to list
	</a>
{% endblock %}
